<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#249586">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/genre_imageView"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/genre_name_textView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="55dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/genre_name_textView"
        android:layout_height="50dp"
        android:id="@+id/service_logos_linearLayout"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="left">
    </LinearLayout>
    <ImageView
        android:id="@+id/done_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_done"
        android:background="#77654a4a"
        android:visibility="invisible"/>
</RelativeLayout>