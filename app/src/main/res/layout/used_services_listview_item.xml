<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:padding="10dp"
        android:id="@+id/service_name_textView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:text="Mikke!"
        android:id="@+id/service_name_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/service_name_textView"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/company_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genso"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/service_name_textView"
        android:layout_below="@+id/service_name_textView2"/>

    <TextView
        android:text="643"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_person"
        android:layout_below="@+id/icon_person"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/person"
        android:id="@+id/icon_person"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>


</RelativeLayout>